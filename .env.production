# Production Environment Configuration for AgroCulture

# Server Configuration
NODE_ENV=production
PORT=$PORT
CLIENT_URL=https://agritoday.netlify.app

# Database Configuration
# This will be set when we create the MongoDB Atlas cluster
MONGODB_URI=$MONGODB_URI

# JWT Configuration
JWT_SECRET=$JWT_SECRET
JWT_EXPIRE=30d

# Razorpay Configuration (You'll need to add your actual keys)
RAZORPAY_KEY_ID=$RAZORPAY_KEY_ID
RAZORPAY_KEY_SECRET=$RAZORPAY_KEY_SECRET

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=$EMAIL_USER
EMAIL_PASS=$EMAIL_PASS

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Subscription Configuration
SUBSCRIPTION_AMOUNT=4900
SUBSCRIPTION_CURRENCY=INR
